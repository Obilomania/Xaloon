@using Xaloon.Areas.Data
@model IEnumerable<ApplicationUser>
<br />

<div class="row">
    <div class="col-6">
        <h2>Users List</h2>
    </div>
</div>
<div class="p-4 border rounded">
    @if (Model.Count() > 0)
    {
        <table class=" table table-striped border">
            <tr class="table-secondary">
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Phone Number
                </th>
                <th> 
                    Role
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr >
                    <td>
                        @item.FirstName
                    </td>
                     <td>
                    @item.LastName
                    </td>
                    <td>
                    @item.Email
                    </td>
                    <td>
                    @item.PhoneNumber
                    </td>
                    <td>
                    @item.Role
                    </td>
                </tr>
            }
        </table>
    }
</div>